<% provide(:container_class, 'container-fluid') %>
<%= render 'navbar' %>
<!-- DISPLAY ALL CONTRIBUTORS -->
<section class="row">
	<%= render 'contributors/contributors' %>
	<section class="contributors_books col-md-8 col-md-offset-1 col-sm-8 col-sm-offset-1 col-xs-8 col-xs-offset-1">
				<!-- DISPLAY BOOKS -->
				<section class="row">
				<p class="col-md-5  col-sm-5 col-xs-offset-1 col-xs-5">Author</p>	
				<p class="col-md-offset-1 col-md-5 col-sm-offset-1 col-sm-5 col-xs-offset-1 col-xs-5">Title</p>
				</section>
			<% @book_collection.each do |book_collection|%>
				<section class="row book-display">
					<p class = "book_author col-md-5  col-sm-5 col-xs-offset-1 col-xs-5"><%= book_collection.author %></p>
					<p class="book_title  col-md-5  col-sm-5 col-xs-offset-1 col-xs-5"><%= book_collection.title %></p>
				</section>
			<% end %>

		<!-- DISPLAY BIO -->
		<section class="row">
			<article class="bio">
				<p class = "col-md-8 col-sm-10 col-xs-10">
					<%= @bio %>
				</p>
			</article>
		</section>
	</section>
</section>


	