<% provide(:container_class, 'container-fluid') %>
<%= render 'navbar' %>
<section class="row">
	<section class="announce-authors text-center">
		<h1>Authors</h1>
	</section>
</section>
<section class="row author-display">
	<% @authors.each do |author_group|%>
		<section class="row author-group">
				<ul>
				<% author_group.each do |author| %>

				<li class ="col-md-3 col-sm-3 col-xs-3 author"><%= author.join unless author.nil? %></li>
			<% end %>
				</ul>
		</section>
	<% end %>
</section>