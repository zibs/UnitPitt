<section class="results-of-search" id = "searchresults">
<% unless @contributor_results.nil? || @book_results.nil? %>
<article class="row">
	<h3><em>Here are the results from your query: </em></h3>
</article>
<!-- CONTRIBUTOR RESULTS -->
<% unless @contributor_results.nil?%>
	<article class="row contributor-results">
    	<% @contributor_results.each do | contributor_result | %>	
        <section class="col-md-8 col-sm-4 col-xs-4"> 
        <h4><b><%= link_to contributor_result.name, contributor_result %></b>: </h4>
        </section><br>
        <section class="col-md-8 col-sm-4 col-xs-4">
        	<p><%= contributor_result.bio %></p>
   		</section>
		<% end %>
    </article>
<% end %>

<!-- BOOK RESULTS -->
<% unless @book_results.nil? %>
	<article class="row book-results">
		<% @book_results.each do |book_result| %>
		<section class="col-md-10 col-sm-4 col-xs-4 book-result-title-author">
			<h4><b><u><%= book_result.title %></u></b> by <%= book_result.author %></h4>
			</section>
				<br>
				<section class="book-result-info-wrap">
					<section class="col-md-8 col-sm-4 col-xs-4">
					<h4>Publisher: <em><%= book_result.publisher %></em></h4>
					</section>
					
					<section class="col-md-8 col-sm-3 col-xs-3">
					<h4>Genre: <%= book_result.genre %></h4>
					</section>
					<br>
					<section class="col-md-8 col-sm-3 col-xs-3">
					<h4>Material: <%= book_result.materiality %></h4>
					</section>
				</section>

			
		<% end %>
	</article>
<% end %>
<% end %>
</section>
